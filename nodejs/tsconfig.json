{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "module": "CommonJS",
        "allowJs": true,
        "types": ["node"],
        "moduleResolution": "node",
        "outDir":"./dist",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/src"
    },
    "include": ["./src/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "transpiler":"ts-node/transpilers/swc",
        "transpileOnly": true
    }
  }